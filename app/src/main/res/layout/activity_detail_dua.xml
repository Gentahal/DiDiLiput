<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_100"
    tools:context=".ui.activity.DetailActivity"
    android:fitsSystemWindows="true">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_100"
        app:liftOnScroll="true"
        app:liftOnScrollTargetViewId="@id/rv_bookmark">
        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:paddingStart="16dp"
            tools:ignore="RtlSymmetry"
            app:menu="@menu/topbar_detail"
            app:title="News"/>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_view_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="16dp"
            android:background="@color/grey_100">

            <TextView
                android:id="@+id/detail_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="5dp"
                android:theme="@style/textAppearanceDetailSource"
                tools:text="viva.com"/>

            <TextView
                android:id="@+id/detail_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_title"
                android:paddingStart="7dp"
                android:theme="@style/textAppearanceTitleDetail"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/detail_source"
                tools:ignore="RtlSymmetry"
                tools:text="Ini Judul Detail Berita" />

            <TextView
                android:id="@+id/tv_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/detail_title"
                android:layout_marginTop="10dp"
                android:theme="@style/textAppearanceAuthor"
                android:text="@string/by"/>

            <TextView
                android:id="@+id/detail_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/tv_by"
                app:layout_constraintTop_toBottomOf="@id/detail_title"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:theme="@style/textAppearanceAuthor"
                tools:text="Daffa Ucuy ramadhan"/>

            <ImageButton
                android:id="@+id/btn_bookmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_bookmark_border"
                android:background="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="@+id/detail_author"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/detail_author"
                app:layout_constraintTop_toTopOf="@id/detail_author"
                app:tint="@color/grey_400" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/image_card"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:elevation="0dp"
                app:layout_constraintTop_toBottomOf="@id/detail_author"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="10dp">
                <ImageView
                    android:id="@+id/img_detail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    tools:src="@tools:sample/backgrounds/scenic"
                    android:contentDescription="@string/detail_image"/>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/detail_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/image_card"
                tools:text="@tools:sample/lorem/random"
                android:layout_marginTop="20dp"
                android:theme="@style/textAppearanceBodyText"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>