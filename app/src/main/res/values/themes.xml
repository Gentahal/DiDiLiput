<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DiLiput" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FF4E00</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/grey_300</item>

        <!-- Bottom Nav       -->
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>

    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView" >
        <!-- Text Size -->
        <item name="android:textSize">12dp</item>
        <!-- Query Text Color -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Hint Color -->
        <item name="android:textColorHint">@color/white</item>
        <!-- Icon Color -->
        <item name="android:tint">@color/white</item>
    </style>

    <style name="ExpandedBarTextStyle">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="CollapsedBarTextStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <!--Bottom Nav Style-->
    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/grey_300</item>
        <item name="colorOnPrimary">@color/grey_dark_primary</item>
    </style>
</resources>