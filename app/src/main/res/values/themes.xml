<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DiLiput" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_800</item>
        <item name="colorOnPrimary">@color/grey_100</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_800</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/grey_100</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Bottom Nav       -->
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView" >
        <!-- Text Size -->
        <item name="android:textSize">12dp</item>
        <!-- Query Text Color -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Hint Color -->
        <item name="android:textColorHint">@color/white</item>
        <!-- Icon Color -->
        <item name="android:tint">@color/white</item>
    </style>

    <style name="ExpandedBarTextStyle">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="CollapsedBarTextStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <!--Bottom Nav Style-->
    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/grey_300</item>
        <item name="colorOnPrimary">@color/grey_dark_primary</item>
    </style>

    <style name="Theme.DiLiput.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Widget.AppCompat.Button.Colored" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@color/blue_800</item>
    </style>


    <!-- Text Types  -->
    <style name="textAppearanceTopbar">
        <item name="android:fontFamily">@font/cinzeldecorative_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/blue_800</item>
    </style>

    <!--  title  -->
    <style name="textAppearanceTitleDetail">
        <item name="android:fontFamily">@font/jakarta_bold</item>
        <item name="android:textColor">@color/grey_dark_primary</item>
        <item name="android:textSize">25sp</item>
    </style>
    <!--  Body Text  -->
    <style name="textAppearanceBodyText">
        <item name="android:fontFamily">@font/jakarta_medium</item>
        <item name="android:textColor">@color/body_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>
    <!--  Source Detail -->
    <style name="textAppearanceDetailSource">
        <item name="android:fontFamily">@font/jakarta_semibold</item>
        <item name="android:textColor">@color/blue_800</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="textAppearanceAuthor">
        <item name="android:fontFamily">@font/jakarta_medium</item>
        <item name="android:textColor">@color/grey_400</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="textAppearanceCardSource">
        <item name="android:fontFamily">@font/jakarta_semibold</item>
        <item name="android:textColor">@color/blue_800</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textAppearanceCardTitle">
        <item name="android:fontFamily">@font/jakarta_semibold</item>
        <item name="android:textColor">@color/grey_dark_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>
</resources>